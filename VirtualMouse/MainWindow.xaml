<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Properties="clr-namespace:VirtualMouse.Properties" x:Class="VirtualMouse.MainWindow"
        Title="MainWindow" 
        Height="700" 
        Width="974"
        Loaded="WindowLoaded"
        Closing="WindowClosing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <Viewbox Grid.Row="0" Grid.RowSpan="2" Grid.Column="0" Stretch="Uniform">
            <Image x:Name="depthImage" Width="640" Height="480"/>
        </Viewbox>
        <Grid Grid.Row="0" Grid.Column="1">
            <Viewbox Stretch="Uniform">
                <Image x:Name="depthImage_initial" Width="320" Height="240"/>
            </Viewbox>
            <Canvas x:Name="canvas_initial" Width="320" Height="240"></Canvas>
        </Grid>
    <Viewbox Grid.Row="1" Grid.Column="1" Stretch="Uniform">
            <Image x:Name="depthImage_indicator" Width="320" Height="240"/>
        </Viewbox>
        <StackPanel Grid.Row="2" Grid.Column="0" Margin="10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Near Field Mode "/>
                <Button x:Name="nearFieldButton" Content="Turn On" Click="nearFieldButton_Click"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Button x:Name="getSurfacebutton" Content="Get Surface" Click="getSurfacebutton_Click"/>
            </StackPanel>
        </StackPanel>
        <DockPanel x:Name="dockPanel" Grid.Row="2" Grid.Column="1" LastChildFill="True">
            <ScrollViewer Height="{Binding ActualHeight, ElementName=dockPanel, Mode=OneWay}">
                <TextBox x:Name="DebugBox" Text="Start Program..." Foreground="white" Background="Black"/>
            </ScrollViewer>
        </DockPanel>
    </Grid>
</Window>
